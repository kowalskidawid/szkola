@model SubjectModel

<h4> Czy na pewno chcesz usunąć przedmiot? </h4>

<form asp-action="Delete" asp-controller="Subjects" method="post">
    <input type = "hidden" asp-for="_id" />
    <div class="row text-center">
        <div class="col-sm-12 col-md-12">
            <strong>  @Html.DisplayNameFor(m => m.abbreviation) </strong>
            @Model.abbreviation
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <strong> @Html.DisplayNameFor(m => m.name) </strong>
            @Model.name
        </div>
    </div>
    <div class="row mx-auto my-1">
        <div class="col-sm-12 col-md-4 offset-md-2">
            <input type="button" value="Anuluj" class="btn btn-primary d-block mr-auto" />
        </div>
        <div class="col-sm-12 col-md-4">
            <input type="submit" value="Usuń" class="btn btn-danger d-block ml-auto" />
        </div>
    </div>
</form>